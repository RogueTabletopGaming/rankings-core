{
  "name": "rankings-core",
  "version": "1.0.0",
  "description": "Swiss + Buchholz standings calculator for TCG/board game events (match points, OMW, GWP, OGWP, SB, safe H2H).",
  "keywords": [
    "swiss",
    "buchholz",
    "tcg",
    "standings",
    "tiebreakers",
    "tournament",
    "one piece tcg",
    "mtg",
    "pokemon"
  ],
  "license": "MIT",
  "author": "Rogue League",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./wasm": {
      "types": "./dist/wasm/index.d.ts",
      "import": "./dist/wasm/index.js",
      "default": "./dist/wasm/index.js"
    },
    "./wasm/ratings.wasm": "./dist/wasm/ratings.wasm"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "prebuild": "npm run wasm:build",
    "build": "tsc -p tsconfig.build.json && rollup -c",
    "dev": "vitest --watch",
    "test": "vitest run",
    "typecheck": "tsc -p . --noEmit",
    "lint": "eslint . --ext .ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm run typecheck && npm test && npm run build",
    "wasm:build": "mkdir -p dist/wasm && asc --config wasm/asconfig.json --target release",
    "wasm:dev": "asc --config wasm/asconfig.json --target debug -b dist/wasm/ratings.wasm"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^26.0.0",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/node": "^22.5.0",
    "assemblyscript": "^0.28.9",
    "eslint": "^9.9.0",
    "rollup": "^4.21.0",
    "rollup-plugin-copy": "^3.5.0",
    "tslib": "^2.8.1",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3"
  }
}
